{
    "name": "BetterDefine",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A simple chrome extension to look up word definitions",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "content_script.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}